<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ReminderActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reminder_title"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                app:layout_constraintBottom_toTopOf="@id/reminder_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/reminder_title_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/reminder_title_icon"
                    app:layout_constraintBottom_toBottomOf="@id/reminder_title"
                    app:layout_constraintEnd_toStartOf="@id/reminder_title_text"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="@id/reminder_title"
                    app:layout_constraintTop_toTopOf="@id/reminder_title" />

                <TextView
                    android:id="@+id/reminder_title_text"
                    style="@style/AppTheme.TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/reminder_title_set"
                    app:layout_constraintEnd_toStartOf="@id/reminder_title_view"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@id/reminder_title_icon"
                    app:layout_constraintTop_toTopOf="@id/reminder_title"
                    app:layout_constraintVertical_chainStyle="packed" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/reminder_title_set"
                    style="@style/AppTheme.EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/reminder_title"
                    app:layout_constraintEnd_toEndOf="@id/reminder_title_text"
                    app:layout_constraintStart_toStartOf="@id/reminder_title_text"
                    app:layout_constraintTop_toBottomOf="@id/reminder_title_text"
                    app:layout_constraintVertical_chainStyle="packed" />

                <View
                    android:id="@+id/reminder_title_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="@id/reminder_title"
                    app:layout_constraintEnd_toEndOf="@id/reminder_title"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@id/reminder_title_text"
                    app:layout_constraintTop_toTopOf="@id/reminder_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reminder_date"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="setDate"
                app:layout_constraintBottom_toTopOf="@id/reminder_time"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reminder_title">

                <ImageView
                    android:id="@+id/reminder_date_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/reminder_date_icon"
                    app:layout_constraintBottom_toBottomOf="@id/reminder_date"
                    app:layout_constraintEnd_toStartOf="@id/reminder_date_text"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="@id/reminder_date"
                    app:layout_constraintTop_toTopOf="@id/reminder_date" />

                <TextView
                    android:id="@+id/reminder_date_text"
                    style="@style/AppTheme.TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/date"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/reminder_date_set"
                    app:layout_constraintEnd_toStartOf="@id/reminder_date_view"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@id/reminder_date_icon"
                    app:layout_constraintTop_toTopOf="@id/reminder_date"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/reminder_date_set"
                    style="@style/AppTheme.TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/reminder_date"
                    app:layout_constraintEnd_toEndOf="@id/reminder_date_text"
                    app:layout_constraintStart_toStartOf="@id/reminder_date_text"
                    app:layout_constraintTop_toBottomOf="@id/reminder_date_text"
                    app:layout_constraintVertical_chainStyle="packed" />

                <View
                    android:id="@+id/reminder_date_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="@id/reminder_date"
                    app:layout_constraintEnd_toEndOf="@id/reminder_date"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@id/reminder_date_text"
                    app:layout_constraintTop_toTopOf="@id/reminder_date" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reminder_time"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="setTime"
                app:layout_constraintBottom_toTopOf="@id/reminder_repeat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reminder_date">

                <ImageView
                    android:id="@+id/reminder_time_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/reminder_time_icon"
                    app:layout_constraintBottom_toBottomOf="@id/reminder_time"
                    app:layout_constraintEnd_toStartOf="@id/reminder_time_text"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="@id/reminder_time"
                    app:layout_constraintTop_toTopOf="@id/reminder_time" />

                <TextView
                    android:id="@+id/reminder_time_text"
                    style="@style/AppTheme.TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/date"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/reminder_time_set"
                    app:layout_constraintEnd_toStartOf="@id/reminder_time_view"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@id/reminder_time_icon"
                    app:layout_constraintTop_toTopOf="@id/reminder_time"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/reminder_time_set"
                    style="@style/AppTheme.TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/reminder_time"
                    app:layout_constraintEnd_toEndOf="@id/reminder_time_text"
                    app:layout_constraintStart_toStartOf="@id/reminder_time_text"
                    app:layout_constraintTop_toBottomOf="@id/reminder_time_text"
                    app:layout_constraintVertical_chainStyle="packed" />

                <View
                    android:id="@+id/reminder_time_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="@id/reminder_time"
                    app:layout_constraintEnd_toEndOf="@id/reminder_time"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@id/reminder_time_text"
                    app:layout_constraintTop_toTopOf="@id/reminder_time" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reminder_repeat"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                app:layout_constraintBottom_toTopOf="@id/reminder_repeat_interval"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reminder_time">

                <ImageView
                    android:id="@+id/reminder_repeat_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/reminder_repeat_icon"
                    app:layout_constraintBottom_toBottomOf="@id/reminder_repeat"
                    app:layout_constraintEnd_toStartOf="@id/reminder_repeat_text"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="@id/reminder_repeat"
                    app:layout_constraintTop_toTopOf="@id/reminder_repeat" />

                <TextView
                    android:id="@+id/reminder_repeat_text"
                    style="@style/AppTheme.TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/date"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/reminder_repeat_set"
                    app:layout_constraintEnd_toStartOf="@id/reminder_repeat_switch"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@id/reminder_repeat_icon"
                    app:layout_constraintTop_toTopOf="@id/reminder_repeat"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/reminder_repeat_set"
                    style="@style/AppTheme.TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/reminder_repeat"
                    app:layout_constraintEnd_toEndOf="@id/reminder_repeat_text"
                    app:layout_constraintStart_toStartOf="@id/reminder_repeat_text"
                    app:layout_constraintTop_toBottomOf="@id/reminder_repeat_text"
                    app:layout_constraintVertical_chainStyle="packed" />

                <Switch
                    android:id="@+id/reminder_repeat_switch"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:checked="true"
                    android:onClick="onSwitchRepeat"
                    android:textOff="Off"
                    android:textOn="On"
                    app:layout_constraintBottom_toBottomOf="@id/reminder_repeat"
                    app:layout_constraintEnd_toEndOf="@id/reminder_repeat"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@id/reminder_repeat_text"
                    app:layout_constraintTop_toTopOf="@id/reminder_repeat" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reminder_repeat_interval"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="setRepeatInterval"
                app:layout_constraintBottom_toTopOf="@id/reminder_repeat_type"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reminder_repeat">

                <ImageView
                    android:id="@+id/reminder_repeat_interval_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/reminder_repeat_interval_icon"
                    app:layout_constraintBottom_toBottomOf="@id/reminder_repeat_interval"
                    app:layout_constraintEnd_toStartOf="@id/reminder_repeat_interval_text"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="@id/reminder_repeat_interval"
                    app:layout_constraintTop_toTopOf="@id/reminder_repeat_interval" />

                <TextView
                    android:id="@+id/reminder_repeat_interval_text"
                    style="@style/AppTheme.TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/date"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/reminder_repeat_interval_set"
                    app:layout_constraintEnd_toStartOf="@id/reminder_repeat_interval_view"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@id/reminder_repeat_interval_icon"
                    app:layout_constraintTop_toTopOf="@id/reminder_repeat_interval"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/reminder_repeat_interval_set"
                    style="@style/AppTheme.TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/reminder_repeat_interval"
                    app:layout_constraintEnd_toEndOf="@id/reminder_repeat_interval_text"
                    app:layout_constraintStart_toStartOf="@id/reminder_repeat_interval_text"
                    app:layout_constraintTop_toBottomOf="@id/reminder_repeat_interval_text"
                    app:layout_constraintVertical_chainStyle="packed" />

                <View
                    android:id="@+id/reminder_repeat_interval_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="@id/reminder_repeat_interval"
                    app:layout_constraintEnd_toEndOf="@id/reminder_repeat_interval"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@id/reminder_repeat_interval_text"
                    app:layout_constraintTop_toTopOf="@id/reminder_repeat_interval" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reminder_repeat_type"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="selectRepeatType"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reminder_repeat_interval">

                <ImageView
                    android:id="@+id/reminder_repeat_type_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/reminder_repeat_type_icon"
                    app:layout_constraintBottom_toBottomOf="@id/reminder_repeat_type"
                    app:layout_constraintEnd_toStartOf="@id/reminder_repeat_type_text"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="@id/reminder_repeat_type"
                    app:layout_constraintTop_toTopOf="@id/reminder_repeat_type" />

                <TextView
                    android:id="@+id/reminder_repeat_type_text"
                    style="@style/AppTheme.TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/date"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/reminder_repeat_type_set"
                    app:layout_constraintEnd_toStartOf="@id/reminder_repeat_type_view"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@id/reminder_repeat_type_icon"
                    app:layout_constraintTop_toTopOf="@id/reminder_repeat_type"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/reminder_repeat_type_set"
                    style="@style/AppTheme.TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/reminder_repeat_type"
                    app:layout_constraintEnd_toEndOf="@id/reminder_repeat_type_text"
                    app:layout_constraintStart_toStartOf="@id/reminder_repeat_type_text"
                    app:layout_constraintTop_toBottomOf="@id/reminder_repeat_type_text"
                    app:layout_constraintVertical_chainStyle="packed" />

                <View
                    android:id="@+id/reminder_repeat_type_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="@id/reminder_repeat_type"
                    app:layout_constraintEnd_toEndOf="@id/reminder_repeat_type"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@id/reminder_repeat_type_text"
                    app:layout_constraintTop_toTopOf="@id/reminder_repeat_type" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>